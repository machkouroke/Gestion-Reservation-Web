<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>com.lop.gestion.Servlet.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddServlet</servlet-name>
        <servlet-class>com.lop.gestion.Servlet.AddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddServlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteServlet</servlet-name>
        <servlet-class>com.lop.gestion.Servlet.DeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListeSalleReservataireServlet</servlet-name>
        <servlet-class>com.lop.gestion.Servlet.ListeSalleReservataireServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListeSalleReservataireServlet</servlet-name>
        <url-pattern>/listeSalleReservataire</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EvtInBlocServlet</servlet-name>
        <servlet-class>com.lop.gestion.Servlet.EvtInBlocServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EvtInBlocServlet</servlet-name>
        <url-pattern>/evtInBloc</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ActifReservateurServlet</servlet-name>
        <servlet-class>com.lop.gestion.Servlet.ActifReservateurServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ActifReservateurServlet</servlet-name>
        <url-pattern>/actifReservateur</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DayReservationServlet</servlet-name>
        <servlet-class>com.lop.gestion.Servlet.dayReservationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DayReservationServlet</servlet-name>
        <url-pattern>/dayReservation</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PastEventServlet</servlet-name>
        <servlet-class>com.lop.gestion.Servlet.PastEventServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PastEventServlet</servlet-name>
        <url-pattern>/pastEvent</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateServlet</servlet-name>
        <servlet-class>com.lop.gestion.Servlet.UpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateServlet</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index</welcome-file>
    </welcome-file-list>
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <include-prelude>/WEB-INF/lib/taglib.jsp</include-prelude>
        </jsp-property-group>

    </jsp-config>
</web-app>